<?xml version="1.0" encoding="UTF-8"?>
<component type="desktop-application">
  <id>dev.corgiterm.CorgiTerm</id>
  <metadata_license>CC0-1.0</metadata_license>
  <project_license>MIT</project_license>
  <name>CorgiTerm</name>
  <summary>A next-generation, AI-powered terminal emulator</summary>

  <description>
    <p>
      CorgiTerm is a modern terminal emulator built with GTK4 and libadwaita,
      featuring AI-powered assistance, project management, and a friendly
      corgi mascot named Pixel.
    </p>
    <p>Features include:</p>
    <ul>
      <li>AI-powered command suggestions and explanations</li>
      <li>Natural language to shell command translation</li>
      <li>Project-based session management with sidebar</li>
      <li>Split panes for multi-terminal workflows</li>
      <li>SSH connection manager</li>
      <li>Customizable themes with live preview</li>
      <li>Snippet and ASCII art libraries</li>
      <li>Plugin system (Lua and WASM)</li>
    </ul>
  </description>

  <launchable type="desktop-id">dev.corgiterm.CorgiTerm.desktop</launchable>

  <screenshots>
    <screenshot type="default">
      <caption>CorgiTerm main window with AI panel</caption>
      <image>https://corgiterm.dev/screenshots/main.png</image>
    </screenshot>
  </screenshots>

